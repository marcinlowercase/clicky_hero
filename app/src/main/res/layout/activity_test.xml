<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".TestActivity">

    <include layout="@layout/toolbar" />

    <ImageButton
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btnDown"
        app:layout_constraintEnd_toStartOf="@+id/btnDown"
        app:layout_constraintTop_toTopOf="@+id/btnDown"
        app:srcCompat="@drawable/left" />

    <ImageButton
        android:id="@+id/btnDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnUp"
        app:layout_constraintStart_toStartOf="@+id/btnUp"
        app:srcCompat="@drawable/down" />

    <ImageButton
        android:id="@+id/btnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/btnDown"
        app:layout_constraintStart_toEndOf="@+id/btnDown"
        app:layout_constraintTop_toTopOf="@+id/btnDown"
        app:srcCompat="@drawable/right" />

    <ImageButton
        android:id="@+id/btnUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btnDown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/up" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvComboName"
        tools:layout_editor_absoluteX="16dp">

        <ImageView
            android:id="@+id/ivTestCombo0"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/left" />

        <ImageView
            android:id="@+id/ivTestCombo1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/down" />

        <ImageView
            android:id="@+id/ivTestCombo2"
            android:layout_width="0dp"

            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/down" />

        <ImageView
            android:id="@+id/ivTestCombo3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/left" />

        <ImageView
            android:id="@+id/ivTestCombo4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/right" />

        <ImageView
            android:id="@+id/ivTestCombo5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/down" />

        <ImageView
            android:id="@+id/ivTestCombo6"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/down" />

        <ImageView
            android:id="@+id/ivTestCombo7"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:padding="2dp"
            app:srcCompat="@drawable/left" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvComboName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Hello"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>